# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Defaults for all types of files
[*.{js,styl,css,hbs,html,json,yml}]
indent_style = space
indent_size = 2
charset = utf-8
